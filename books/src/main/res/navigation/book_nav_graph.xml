<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_nav_graph"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.books.presentation.list.ui.BookListFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_bookListFragment_to_createBookFragment"
            app:destination="@id/createBookFragment" />
        <action
            android:id="@+id/action_bookListFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/createBookFragment"
        android:name="com.example.books.presentation.create.ui.CreateBookFragment"
        android:label="CreateBookFragment">

    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.books.presentation.detail.ui.BookDetailFragment"
        android:label="BookDetailFragment">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>


</navigation>